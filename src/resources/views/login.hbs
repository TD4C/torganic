<main class="login-main">
    <div class="login-container">
        <div class="tabs">
            <a href="/login"> <button class="login-buton_header active">Login</button></a>
            <a href="/register"><button class="login-buton_header">Register</button></a>
        </div>
        <form id="login-form" method="POST" action="/login">
            <div class="login-input">
                <label class="label" for="username">Username</label>
                <div class="login-input__container">
                    <input class="login-input__element" id="username" type="text" placeholder="Nhập tên đăng nhập" />
                </div>
                <div class="login-error"></div>
            </div>
            <div class="login-input">
                <label class="label" for="password">Mật khẩu</label>
                <div class="login-input__container">
                    <input class="login-input__element" id="password" type="password" placeholder="Nhập mật khẩu" />
                </div>
                <div class="login-error"></div>
            </div>
            <div class="checkbox-container">
                <label class="tick">
                    <input type="checkbox" style="margin-right: 5px;" />
                    Remember for 30 days
                </label>
                <a href="#">Quên mật khẩu?</a>
            </div>
            <div class="login-input__container">
                <button class="login-button" type="submit">Đăng nhập</button>
            </div>
        </form>
    </div>
</main>
