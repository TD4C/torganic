
<main>
    <div class="register-form-container">
        <div class="tabs">
            <a href="/login"> <button class="register-buton_header">Login</button></a>
            <button class="register-buton_header register-active">Register</button>
        </div>
        <form>
            <div class="register-input">
                <label for="full-name">Full name</label>
                <div class="register-input__container">
                    <input class="register-input__element" id="full-name" type="text" placeholder="Huỳnh Thành Đạt"/>
                </div>
                <div class="register-error"></div>
            </div>
            <div class="register-input">
                <label for="email">Email</label>
                <div class="register-input__container">
                    
                        <input class="register-input__element" id="email" type="email" placeholder="abc@gmail.com"/>
                
                    <!-- <i class="fas fa-envelope"></i>  -->
                    
                </div>
                <div class="register-error"></div>
            </div>
            <div class="register-input">
                <label for="phone">Phone</label>
                <div class="register-input__container">
                    <input class="register-input__element" id="phone" placeholder="Enter Your Number" type="text"/>
                </div>
                <div class="register-error"></div>
            </div>
            <div class="register-input">
                <label for="password">Password</label>
              <div class="register-input__container">
                <input class="register-input__element" id="password" placeholder="Enter Your Password" type="password"/>
              </div>
                <div class="register-error"></div>
            </div>
            <div class="register-input">
                <label for="confirm-password">Confirm Password</label>
                <div class="register-input__container">
                    <input class="register-input__element" id="confirm-password" placeholder="Confirm Password" type="password"/>
                </div>
                <div class="register-error"></div>
            </div>
            <div class="register-input">              
             <button class="register-button" type="submit">Create an account</button>
            </div>
        </form>
    </div>
</main>